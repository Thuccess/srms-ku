# ============================================
# Server Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# ============================================
# REQUIRED VARIABLES
# ============================================

# MongoDB Connection String (REQUIRED)
# Format: mongodb://username:password@host:port/database
# Or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
# Example: mongodb+srv://user:password@cluster0.xxxxx.mongodb.net/student-risk-system
# For production, use MongoDB Atlas or managed MongoDB instance
MONGO_URI=<your-mongodb-uri>

# JWT Secret for authentication tokens (REQUIRED)
# Generate a strong random string (minimum 32 characters required)
# Example: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# IMPORTANT: Use a different secret for each environment (dev/staging/prod)
JWT_SECRET=<your-jwt-secret>

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Server Port (default: 5000)
# In production, this is usually set by the hosting platform (Render, Heroku, etc.)
PORT=5000

# Node Environment
# Options: development, production, test
# In production, set to: production
NODE_ENV=development

# Frontend URL for CORS (REQUIRED in production)
# Development: http://localhost:3000
# Production: https://your-frontend-domain.com
# For single-service deployment (backend serves frontend), set to your service URL
CLIENT_URL=http://localhost:3000

# Serve Static Files (for single-service deployment)
# Set to "true" if backend should serve the built React app
# This allows deploying as a single service instead of separate frontend/backend
# Default: false (backend only serves API)
SERVE_STATIC=false

# JWT Token Expiration (optional, default: 7d)
# Format: number followed by time unit (s, m, h, d)
# Examples: 1h, 24h, 7d, 30d
JWT_EXPIRES_IN=7d

# OpenAI API Key (optional)
# Required only if using AI-powered explanations and recommendations
# Get your API key from: https://platform.openai.com/api-keys
# If not provided, system will use fallback explanations
OPENAI_API_KEY=

# Error Tracking - Sentry (optional)
# Get your DSN from: https://sentry.io/
# Recommended for production environments
SENTRY_DSN=

# Logging Configuration (optional)
# Log levels: error, warn, info, debug, verbose
# Default: info (production), debug (development)
# In production, use: info or warn
LOG_LEVEL=

# ============================================
# PRODUCTION NOTES
# ============================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Set CLIENT_URL to your production frontend URL
# 3. Set MONGO_URI to your production MongoDB instance
# 4. Generate a strong JWT_SECRET (min 32 chars)
# 5. Set SERVE_STATIC=true if deploying as single service
# 6. Set LOG_LEVEL=info for production logging
# 7. Configure SENTRY_DSN for error tracking (recommended)

